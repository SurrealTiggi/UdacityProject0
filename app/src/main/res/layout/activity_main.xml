<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#BBDEFB">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/landing_title"
        android:id="@+id/textView"
        android:textSize="30dp"
        android:textColor="#fe000000"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Movie streamer"
        android:id="@+id/app1Button"
        android:background="#2962FF"
        android:clickable="true"
        android:elegantTextHeight="true"
        android:enabled="true"
        android:textSize="30dp"
        android:textColor="#E3F2FD"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scores App"
        android:id="@+id/app2Button"
        android:background="#2962FF"
        android:clickable="true"
        android:elegantTextHeight="true"
        android:enabled="true"
        android:textSize="30dp"
        android:textColor="#E3F2FD"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/app1Button"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Library App"
        android:id="@+id/app3Button"
        android:background="#2962FF"
        android:clickable="true"
        android:elegantTextHeight="true"
        android:enabled="true"
        android:textSize="30dp"
        android:textColor="#E3F2FD"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/app2Button"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Build it Bigger"
        android:id="@+id/app4Button"
        android:background="#2962FF"
        android:clickable="true"
        android:elegantTextHeight="true"
        android:enabled="true"
        android:textSize="30dp"
        android:textColor="#E3F2FD"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/app3Button"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="XYZ Reader"
        android:id="@+id/app5Button"
        android:background="#2962FF"
        android:clickable="true"
        android:elegantTextHeight="true"
        android:enabled="true"
        android:textSize="30dp"
        android:textColor="#E3F2FD"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/app4Button"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Capstone: My Own App"
        android:id="@+id/app6Button"
        android:background="#1A237E"
        android:clickable="true"
        android:elegantTextHeight="true"
        android:enabled="true"
        android:textSize="30dp"
        android:textColor="#E3F2FD"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/app5Button"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
